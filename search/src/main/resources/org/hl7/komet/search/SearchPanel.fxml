<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hl7.komet.search.SearchPanelController">
   <top>
      <GridPane BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <MenuButton fx:id="navigationMenuButton" mnemonicParsing="false" GridPane.hgrow="SOMETIMES">
              <items>
                  <Menu fx:id="navigationCoordinateMenu" mnemonicParsing="false" text="Coordinates" />
              </items>
            </MenuButton>
            <TextField fx:id="queryString" maxWidth="1.7976931348623157E308" onAction="#doSearch" prefHeight="26.0" prefWidth="316.0" promptText="enter search query" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
         </children>
      </GridPane>
   </top>
   <center>
      <ListView fx:id="resultsListView" prefHeight="317.0" prefWidth="376.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
